<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".UserRegister"
    android:background="@drawable/background_landscape">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="305dp"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        android:textColorHint="#FFFFFF"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:drawableStart="@drawable/ic_username"
            android:background="@drawable/transparent_textview"
            android:drawablePadding="5dp"
            android:textColor="#FFFFFF"
            android:layout_margin="2dp"
            android:hint="Enter a Username"
            android:inputType="text"
            android:paddingTop="@dimen/floating_hint_margin"
            android:padding="6dp"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="305dp"
        android:layout_height="90dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        android:textColorHint="#FFFFFF"
        app:passwordToggleEnabled="true"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:drawableStart="@drawable/ic_password"
            android:background="@drawable/transparent_textview"
            android:drawablePadding="5dp"
            android:textColor="#FFFFFF"
            android:layout_margin="2dp"
            android:hint="Enter a password"
            android:inputType="textPassword"
            android:padding="6dp"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="305dp"
        android:layout_height="90dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        android:textColorHint="#FFFFFF"
        app:passwordToggleEnabled="true"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_con_password"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:drawableStart="@drawable/ic_password"
            android:background="@drawable/transparent_textview"
            android:drawablePadding="5dp"
            android:textColor="#FFFFFF"
            android:layout_margin="2dp"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            android:padding="6dp"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:stateListAnimator="@null"
        android:background="@drawable/button_background"
        android:text="Register"
        android:textSize="18sp"
        android:textColor="#D2F8F4"
        android:textAllCaps="false"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="Already registered? Sign in here."/>





</LinearLayout>